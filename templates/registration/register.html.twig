{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div id="banniere">
        <h2 class="titre-secondaire">ECURIE LE PETIT ROCHER</h2>
    </div>
    <h3>Mon compte : accès réservé aux propriétaires</h3>

<div class="container">
    {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.customer.lastName) }}

        {{ form_row(registrationForm.customer.firstName) }}

        {{ form_row(registrationForm.email) }}

        {{ form_row(registrationForm.customer.phoneNumber) }}

        {{ form_row(registrationForm.customer.address) }}

        {{ form_row(registrationForm.customer.zipCode) }}

        {{ form_row(registrationForm.customer.city) }}

        {{ form_row(registrationForm.customer.birthDate) }}

        {% if is_granted('ROLE_ECURIE') %}
        {{ form_row(registrationForm.customer.horseName) }}
        {% endif %}

        {{ form_row(registrationForm.plainPassword.first) }}

        {{ form_row(registrationForm.plainPassword.second) }}

        {{ form_errors(registrationForm.plainPassword) }}



        <button type="submit" class="btn">Créer</button>
    {{ form_end(registrationForm) }}
</div>

    <a href="{{ path('main_home') }}" class="btn-modifier ml-16">Annuler</a>
{% endblock %}
