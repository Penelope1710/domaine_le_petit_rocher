        {{ form_row(registrationForm.customer.address) }}
        {{ form_row(registrationForm.customer.zipCode) }}
        {{ form_row(registrationForm.customer.city) }}
        {{ form_row(registrationForm.customer.birthDate) }}
{#        test si la variable existe et si oui je l'affiche#}
        {% if registrationForm.customer.horseName is defined %}
            {{ form_row(registrationForm.customer.horseName) }}
