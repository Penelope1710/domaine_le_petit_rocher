{% extends 'base.html.twig' %}

{% block title %}Les disponibilités du gîte{% endblock %}

{% block body %}
<div id="banniere">
    <h2 class="titre_secondaire">LE GITE</h2>
</div>
<h3 class="titre_tertiaire">Les disponibilités : Gîte 4 personnes</h3>
    <p class="sous-titre">Date du jour : {{ currentDate|format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY") }}</p>

    <section class="disponibilites">

        <div id="calendar" style="display: none;"></div>
        <div id="loader"></div>

        <p class="legend">
            Dates en noir : indisponible <br>
            Dates en blanc : disponible
        </p>
        {% if not app.user %}
            <p>
                Pour réserver, merci de bien vouloir <a href="{{ path('app_login') }}">vous connecter</a> ou <a href="{{ path('app_register_gite') }}">vous inscrire</a>
            </p>
        {% endif %}

        {% if app.user %}
            <div class="button-reserver">
                <a href="{{ path('app_gite_reservation_create') }}" class="btn" role="button">Réserver</a>
            </div>
        {% endif %}

    </section>
{% endblock %}

