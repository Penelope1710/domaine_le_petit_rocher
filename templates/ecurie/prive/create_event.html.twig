{% extends 'base.html.twig' %}

{% block title %}Ecurie - Plannifier un évènement{% endblock %}

{% block body %}
    <div id="banniere">
        <h2 class="titre-secondaire">ECURIE</h2>
    </div>
    <div class="titre-tertiaire">
        <h3>Plannifier un évènement</h3>
        <p>Date du jour : {{ currentDate|format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY") }}</p>
    </div>

    <section class="create-event-form">
        {{ form_start(createEventForm) }}
        {{ form_errors(createEventForm) }}

        {{ form_row(createEventForm.name) }}
        {{ form_row(createEventForm.category) }}
        {{ form_row(createEventForm.startDate) }}
        {{ form_row(createEventForm.startTime) }}
        {{ form_row(createEventForm.deadLine) }}
        {{ form_row(createEventForm.eventDetails) }}
        <button class="btn-plannifier" type="submit">
            Plannifier
        </button>
        {{ form_end(createEventForm) }}
        <div class="btn-create-event-form-annuler">
            <a href="{{ path('app_ecurie_event_index') }}" title="">Annuler</a>
        </div>
    </section>

{% endblock %}
