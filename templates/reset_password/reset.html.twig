{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<h3>Réinitialisation de votre mot de passe</h3>
    <div class="password-reset-form">
        <div class="password-reset-form-champ">
        {{ form_start(resetForm) }}

        {{ form_row(resetForm.plainPassword.first) }}
        {{ form_row(resetForm.plainPassword.second) }}
            {{ form_errors(resetForm) }}

        <button class="button-password-reset-form">Réinitialiser</button>
        {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
